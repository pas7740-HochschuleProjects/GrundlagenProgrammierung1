    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and debug bin/${fileBasenameNoExtension}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false, // set this to true if you need the debug console as well
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Automatische Strukturierung und Einrückung für \"gdb\" aktivieren",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Run Makefile",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
